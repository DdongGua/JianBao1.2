<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:background="#ffffff"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mGrid_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingLeft="15dp"
            fresco:placeholderImage="@mipmap/nopicture"
            />

        <TextView
            android:id="@+id/mGrid_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:text="物品的title"
            android:textColor="#292929"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/mD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="￥"
                android:textColor="#CD2626" />

            <TextView
                android:id="@+id/mGrid_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/mD"
                android:text="181"
                android:textColor="#CD2626"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/mGrid_tag"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/normal" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
